@model ProductManagementSystem.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">Product Details</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>Product Name</dt>
                    <dd>@Model.ProductName</dd>

                    <dt>Category</dt>
                    <dd>@Model.CategoryName</dd>

                    <dt>Price</dt>
                    <dd>$@Model.Price.ToString("0.00")</dd>

                    <dt>Stock Quantity</dt>
                    <dd>
                        @if (Model.StockQuantity < 10)
                        {
                            <span class="text-danger">@Model.StockQuantity (Low Stock)</span>
                        }
                        else
                        {
                            @Model.StockQuantity
                        }
                    </dd>

                    <dt>Description</dt>
                    <dd>@Model.Description</dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div> 