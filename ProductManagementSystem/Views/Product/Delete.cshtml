@model ProductManagementSystem.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="panel panel-danger">
    <div class="panel-heading">
        <h2 class="panel-title">Confirm Delete</h2>
    </div>
    <div class="panel-body">
        <h3>Are you sure you want to delete this product?</h3>
        <div class="row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>Product Name</dt>
                    <dd>@Model.ProductName</dd>

                    <dt>Category</dt>
                    <dd>@Model.CategoryName</dd>

                    <dt>Price</dt>
                    <dd>$@Model.Price.ToString("0.00")</dd>

                    <dt>Stock Quantity</dt>
                    <dd>@Model.StockQuantity</dd>

                    <dt>Description</dt>
                    <dd>@Model.Description</dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ProductID)

                    <div class="form-actions">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                    </div>
                }
            </div>
        </div>
    </div>
</div> 