@model List<ProductManagementSystem.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No products found.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.CategoryName</td>
                    <td>$@product.Price.ToString("0.00")</td>
                    <td>
                        @if (product.StockQuantity < 10)
                        {
                            <span class="text-danger">@product.StockQuantity</span>
                        }
                        else
                        {
                            @product.StockQuantity
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = product.ProductID }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = product.ProductID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
} 