@model List<ProductManagementSystem.Models.Product>

@{
    ViewBag.Title = "Low Stock Products";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Low Stock Products (Below @ViewBag.Threshold)</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("LowStock", "Product", FormMethod.Get, new { @class = "form-inline search-box" }))
                {
                    <div class="form-group">
                        <label for="threshold">Threshold:</label>
                        <div class="input-group">
                            <input type="number" id="threshold" name="threshold" value="@ViewBag.Threshold" class="form-control" min="1" />
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Update
                                </button>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
        
        <p>
            @Html.ActionLink("Back to Products", "Index", null, new { @class = "btn btn-default" })
        </p>
        
        @if (Model.Count == 0)
        {
            <div class="alert alert-info">
                No products are below the stock threshold of @ViewBag.Threshold.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.CategoryName</td>
                                <td>$@product.Price.ToString("0.00")</td>
                                <td>
                                    <span class="text-danger">@product.StockQuantity</span>
                                </td>
                                <td class="action-buttons">
                                    @Html.ActionLink("Details", "Details", new { id = product.ProductID }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Edit", "Edit", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div> 